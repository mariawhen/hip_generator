
<div id="user-jumbotron" class="jumbotron text-center">
  <h1 class="text-center">Hi <%= current_user.email.split('@').first.capitalize %>!</h1>
    <p>This is <strong>Your</strong> Name Generator!</p>

  <div id="word-generator">
    <ul class="text-center list-inline">
      <li>
        <a href = "/users/<%=@user.id%>" class="btn btn-success btn-lg text-center">Generate!</a>
      </li>

      <li>
        <h2 class="text-center">
          <%= @word %>
        </h2>
      </li>

    </ul>
  </div>

</div>

<!-- <h1><%= current_user.email %>'s Home Page</h1> -->
<div class="container">
<h2 id="table-words">Your Added Words
</h2>
<div class="whatever">
    <div class="words" data-id="table">
     <table class="table">
        <!-- <caption>Optional table caption.</caption> -->
        <thead>
          <tr>
            <th>Word</th>
            <th>Category</th>
            <th>Tense</th>
            <th>Genre</th>
          </tr>
        </thead>
        <% @user.words.each do |word| %>
        <tbody>
          <tr>
            <th scope="row"><a href="/words/<%=word.id%>/edit"><%= word.word %></a></th>
            <td><%= word.cat %></td>
            <td><%= word.tense %></td>
            <td><%= word.genre %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div><!-- /example --></div>
      <a href = "/words/new" class="btn btn-primary btn-lg btn-block text-center pull-right">Add Word!</a>
</div>
