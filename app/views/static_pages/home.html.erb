<!-- Visitors who are not logged in will only see this -->
<div class="jumbotron text-center">

  <% if logged_in? %>
    <h1 class="text-center">Hey there <%= current_user.email.split('@').first.capitalize %>!</h1>
  <% else %>
    <h1 class="text-center">Hey there Stranger!</h1>
  <% end %>
<br>
<br>
  <div id="word-generator">
    <div class="row">
      <a href = "/" class="btn btn-success btn-lg text-center">Generate a name!</a>
      <div class="randomWord"><h2 class="generated"><%= @word %></h2></div>
    </div>
  </div>

</div>
<% if logged_in? %>
<div class="container">
<h2 id="table-words">
<%= @words.count %> Words in the General Database
</h2>
<div class="scroll">
    <div class="words" data-id="table">
     <table class="table">
        <!-- <caption>Optional table caption.</caption> -->
        <thead>
          <tr>
            <th>Word</th>
            <th>Category</th>
            <th>Tense</th>
            <th>Genre</th>
          </tr>
        </thead>
        <% @words.each do |word| %>
        <tbody>
          <tr>
            <th scope="row"><%= word.word %></th>
            <td><%= word.cat %></td>
            <td><%= word.tense %></td>
            <td><%= word.genre %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

</div>
<% end %>
