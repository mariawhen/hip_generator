<!-- POST New Word form -->

<div class="container">
  <h3 class="text-center">Enter a new Word!</h3>

  <!-- Bootstrap form for adding New Word -->

  <%= bootstrap_form_for(@word) do |word| %>
    <%= word.text_field :word %>
    <%= word.select :cat, ["noun","adjective"], {label: "Part of Speech"} %>
    <%= word.text_field :genre %>
    <%= word.text_field :tense %>
    <%= word.submit "Submit Word" %>

    <!-- Button to go to Users#show -->

    <a href="/users/<%= current_user[:id] %>"><button type="button" class="btn btn-default">Your Words</button></a>
  <% end %>
<br>

    <!-- Flashes message to Notify User what word was added -->

<% flash.each do |name, message| %>
  <div class="flash-message flash-message-<%= name %> alert alert-success">
    <%= message %>
  </div>
<% end %>

