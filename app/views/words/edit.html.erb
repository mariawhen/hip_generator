<div class="container">
  <h1>Words#edit</h1>
  <p>Find me in app/views/words/edit.html.erb</p>
  <h1>Hi</h1>

  <div class="container">
    <h3 class="text-center">Edit your word: <%= @word.word %></h3>

    <%= bootstrap_form_for @word do |word| %>
      <%= word.text_field :word %>
      <%= word.select :cat, ["Noun","Adjective"], {label: "Part of Speech"} %>
      <%= word.text_field :genre %>
      <%= word.text_field :tense %>
      <%= word.submit "Edit Word" %>
    <% end %>

    <%= link_to 'Destroy', @word, method: :delete, data: { confirm: 'Are you sure?' }%>

  </div>
</div>

