<h1>Words#new</h1>
<%= form_for @word do |word| %>
  <p>
    <%= word.label :word, "Word" %>:
    <%= word.text_field :word %><br />
  </p>

  <p>
    <%= word.label :cat, "Category" %>:
    <%= word.select :cat, [ 'noun', 'adjective'], :prompt => 'Select One' %>
  </p>

  <p>
    <%= word.label :tense, "Tense" %>:
    <%= word.text_field :tense %><br />
  </p>

  <p>
    <%= word.label :genre, "Genre" %>:
    <%= word.text_field :genre %><br />
  </p>

  <%= word.submit %>
<% end %>
